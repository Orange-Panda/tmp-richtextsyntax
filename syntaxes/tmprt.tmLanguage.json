{
	"scopeName": "source.tmprt",
	"patterns": [{ "include": "#noparse" }, { "include": "#allPatterns" }],
	"repository": {
		"noparse": {
			"name": "markup.inline.raw.tmprt",
			"begin": "(?i)(<noparse>)",
			"end": "(?i)(</noparse>|$)",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.tag.start" }
			},
			"endCaptures": { 
				"0": { "name": "punctuation.definition.tag.end" }
			}
		},
		"allPatterns": {
			"patterns": [
				{ "include": "#bold" }, 
				{ "include": "#italic"}, 
				{ "include": "#strikethrough" }, 
				{ "include": "#underline" }, 
				{ "include": "#link" },
				{ "include": "#mark-start" },
				{ "include": "#mark-end" }
			]
		},
		"bold": {
			"contentName": "markup.bold.tmprt",
			"begin": "(?i)(<b>)",
			"end": "(?i)(</b>|$)",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.tag.start" }
			},
			"endCaptures": { 
				"0": { "name": "punctuation.definition.tag.end" }
			},
			"patterns": [
				{ "include": "#allPatterns" }
			]
		},
		"italic": {
			"contentName": "markup.italic.tmprt",
			"begin": "(?i)(<i>)",
			"end": "(?i)(</i>|$)",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.tag.start" }
			},
			"endCaptures": { 
				"0": { "name": "punctuation.definition.tag.end" }
			},
			"patterns": [
				{ "include": "#allPatterns" }
			]
		},
		"strikethrough": {
			"contentName": "markup.strikethrough.tmprt",
			"begin": "(?i)(<s>)",
			"end": "(?i)(</s>|$)",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.tag.start" }
			},
			"endCaptures": { 
				"0": { "name": "punctuation.definition.tag.end" }
			},
			"patterns": [
				{ "include": "#allPatterns" }
			]
		},
		"underline": {
			"contentName": "markup.underline.tmprt",
			"begin": "(?i)(<u>)",
			"end": "(?i)(</u>|$)",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.tag.start" }
			},
			"endCaptures": { 
				"0": { "name": "punctuation.definition.tag.end" }
			},
			"patterns": [
				{ "include": "#allPatterns" }
			]
		},
		"link": {
			"contentName": "markup.underline.link.tmprt",
			"begin": "(?i)(<link=)(\"[^\"]*\")(>)",
			"end": "(?i)(</link>|$)",
			"beginCaptures": {
				"0": { "name": "punctuation.definition.tag.start" },
				"1": { "name": "punctuation.definition.tag.start" },
				"2": { "name": "punctuation.section.embedded" },
				"3": { "name": "punctuation.definition.tag.start" }
			},
			"endCaptures": { 
				"0": { "name": "punctuation.definition.tag.end" }
			},
			"patterns": [
				{ "include": "#allPatterns" }
			]
		},
		"mark-start": {
			"match": "(?i)(<mark=)(#[a-f|0-9]*)(>)",
			"captures": {
				"0": { "name": "punctuation.definition.tag.start" },
				"1": { "name": "punctuation.definition.tag.start" },
				"2": { "name": "punctuation.section.embedded" },
				"3": { "name": "punctuation.definition.tag.start" }
			}
		},
		"mark-end": {
			"match": "(?i)(</mark>|$)",
			"captures": {
				"0": { "name": "punctuation.definition.tag.end" }
			}
		}
	}
}