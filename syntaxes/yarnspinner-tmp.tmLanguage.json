{
	"scopeName": "source.yarnspinner-tmp",
	"patterns": [{ "include": "#italic" }, { "include": "#bold"}],
	"repository": {
		"bold": {
			"patterns": [{ "include": "#paren-bold" }, { "include": "#paren-italic" }]
		},
		"paren-bold": {
			"begin": "<b>",
			"end": "</b>|$",
			"beginCaptures": {
				"0": {
				"name": "markup.bold.open"
				}
			},
			"endCaptures": { 
				"0": { "name": "markup.bold.close" }
			},
			"name": "markup.bold.markdown",
			"patterns": [{ "include": "#bold" }]
		},
		"italic": {
			"patterns": [{ "include": "#paren-italic" }, { "include": "#paren-bold" }]
		},
		"paren-italic": {
			"begin": "<i>",
			"end": "</i>|$",
			"beginCaptures": {
				"0": {
				"name": "markup.italic.open"
				}
			},
			"endCaptures": { 
				"0": { "name": "markup.italic.close" }
			},
			"name": "markup.italic.markdown",
			"patterns": [{ "include": "#italic" }]
		}
	}
}